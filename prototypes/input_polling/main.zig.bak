const std = @import("std");

const cstd = @cImport(@cInclude("stdlib.h")); // c standard library
const ctermios = @cImport(@cInclude("termios.h")); // terminal io interfaces
const cunistd = @cImport(@cInclude("unistd.h")); // unix headers

const stdin_fileno = std.posix.STDIN_FILENO;

const max_events = 32;
const fps = 24;

var original_terminal_settings: ctermios.struct_termios = undefined;

fn cleanup_terminal() void {
    _ = ctermios.tcsetattr(stdin_fileno, ctermios.TCSANOW, &original_terminal_settings);
}

pub fn main() !void {
    if (ctermios.tcsetattr(stdin_fileno, ctermios.TCSANOW, &original_terminal_settings) < 0) {
        std.log.warn("could not get terminal settings\n", .{});
        std.process.exit(1);
    }

    var raw: ctermios.struct_termios = original_terminal_settings;
}
